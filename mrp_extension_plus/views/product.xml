<odoo>
    <data>
        <record id="mrp_product_template_form_view_inherited" model="ir.ui.view">
			<field name="name">mrp.product.template.only.form.view.inherited</field>
			<field name="model">product.template</field>
			<field name="inherit_id" ref="product.product_template_form_view" />
			<field name="arch" type="xml">
				 <xpath expr="//page[@name='general_information']/group[1]" position="after">
					<group>
                        <group>
                            <field name="length" />
                            <field name="width"/>
                            <field name="is_mother"/>
                            <field name="is_waste"/>
                        </group>
                    </group>
				</xpath>
			</field>
		</record>

        
		
    
    </data>
</odoo>